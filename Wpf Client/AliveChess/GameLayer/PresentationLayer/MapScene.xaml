            ForceCursor="True">
            <Grid  
                Height="705" 
                HorizontalAlignment="Left" 
                Name="grid1" 
                VerticalAlignment="Top" 
                Width="1280">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="10*" />
                    <RowDefinition Height="65*" />
                    <RowDefinition Height="25*" />
                </Grid.RowDefinitions-->


                <Canvas x:Name="canvasDynamicObjects"
                    Height="5000" 
                    HorizontalAlignment="Left"  
                    VerticalAlignment="Top" 
                    Grid.ColumnSpan="3" Background="Transparent" 
                        Panel.ZIndex="100"
                    Grid.RowSpan="3" MouseLeftButtonDown="canvasDynamicObjects_MouseLeftButtonDown" Width="5000" MouseRightButtonDown="canvasDynamicObjects_MouseRightButtonDown">
                    <Canvas x:Name="canvasBuildings"
                                Height="5000" 
                                HorizontalAlignment="Left" 
                                VerticalAlignment="Top" 
                                Width="5000" 
                                Grid.ColumnSpan="3" Background="Transparent" 
                                Grid.RowSpan="3">

                        <Canvas x:Name="canvasLandscape"
                            Height="5000" 
                            HorizontalAlignment="Left" 
                            VerticalAlignment="Top" 
                            Width="5000" 
                            Grid.ColumnSpan="3" Background="Transparent" 
                            Grid.RowSpan="3">
                            <Canvas x:Name="canvasGround"
                                    Height="5000" 
                                    HorizontalAlignment="Left" 
                                    VerticalAlignment="Top" 
                                    Width="5000" 
                                    Grid.ColumnSpan="3" Background="AliceBlue" 

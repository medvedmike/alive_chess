<PresentationLayer:GameScene x:Class="AliveChess.GameLayer.PresentationLayer.MapScene"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
      xmlns:PresentationLayer="clr-namespace:AliveChess.GameLayer.PresentationLayer" 
      Width="Auto" Height="Auto" Title="Карта" x:Name="SceneMap">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>

            <RowDefinition Height="5000*"/>
        </Grid.RowDefinitions>

        <ToolBar Grid.Row="0">
            <Label Name="LabelGold" Content="Золото:"/>
            <Label Name="LabelGoldQuantity" Content="0"/>
            <Label Name="LabelWood" Content="Дерево:"/>
            <Label Name="LabelWoodQuantity" Content="0"/>
            <Label Name="LabelStone" Content="Камень:"/>
            <Label Name="LabelStoneQuantity" Content="0"/>
            <Label Name="LabelIron" Content="Железо:"/>
            <Label Name="LabelIronQuantity" Content="0"/>
            <Label Name="LabelCoal" Content="Уголь:"/>
            <Label Name="LabelCoalQuantity" Content="0"/>
        </ToolBar>


        <ScrollViewer Grid.Row="1" x:Name="scrollViewerMap" VerticalScrollBarVisibility ="Auto" HorizontalScrollBarVisibility="Auto" Grid.RowSpan="2" ScrollChanged="scrollViewerMap_ScrollChanged" KeyDown="scrollViewerMap_KeyDown">
            <StackPanel>
